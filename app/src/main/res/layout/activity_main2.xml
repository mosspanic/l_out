<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


        <LinearLayout
            android:id="@+id/gor20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:id="@+id/gor21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/gor2">

                <TextView
                    android:id="@+id/tv21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="10:42"
                    android:textAlignment="center"
                    android:textColor="#101010"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:keepScreenOn="false"
                    android:scaleType="fitStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/image" />

                <ImageView
                    android:id="@+id/alarms2"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:keepScreenOn="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/alarms" />

                <ImageView
                    android:id="@+id/find2"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:keepScreenOn="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/find" />

                <ImageView
                    android:id="@+id/bell2"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:keepScreenOn="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/bell" />

                <ImageView
                    android:id="@+id/wifi2"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:keepScreenOn="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/wifi" />

                <ImageView
                    android:id="@+id/network_cell2"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:keepScreenOn="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/network_cell" />

                <ImageView
                    android:id="@+id/signal_cellular2"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:keepScreenOn="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/signal_cellular" />

                <TextView
                    android:id="@+id/tv22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:lineSpacingExtra="14sp"
                    android:text="98  %"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/battery_cell2"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:keepScreenOn="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/battery_full" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gor22"
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/gor1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/tv23"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="50dp"
                    android:text="      Евгений Д.Ч."
                    android:textAlignment="textStart"
                    android:textColor="#070707"
                    android:textSize="20sp"
                    android:paddingBottom="0dp"
                    android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv24"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="         Лицевой счёт: №"
                        android:textAlignment="textStart"
                        android:textColor="#A4A4A4"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/face2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:keepScreenOn="false"
                    android:paddingLeft="150dp"
                    android:paddingTop="50dp"
                    android:paddingBottom="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/face_foreground" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Общее"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv26"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Тарифы"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/separator" />

                    <TextView
                        android:id="@+id/tv27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textAlignment="center" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Настройки"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:elevation="20dp"
                android:ellipsize="none"
                android:text="    Активные"
                android:textColor="#000000"
                android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/rounded_border">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv210"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Улыбка (бесплатно)"
                android:textColor="#0E0E0E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv211"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Скорость до 100 Мбит/с"
                android:textColor="#B0B0B0"
                android:textStyle="bold" />
            ></LinearLayout>

        <TextView
            android:id="@+id/tv212"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:text=" 0₽/мес"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textStyle="bold" />
        ></LinearLayout>

            <TextView
                android:id="@+id/tv213"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Рекомендуемые"
                android:textColor="#090909"
                android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/rounded_border">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv214"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Кабельное телевидение"
                    android:textColor="#090909"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv215"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Более 200 каналов"
                    android:textColor="#ABABAB"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv216"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="140₽/мес"
                android:textAlignment="center"
                android:textColor="#090909"
                android:textStyle="bold" />
        </LinearLayout>
        </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>